{% block body %}

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" href="{{ absolute_url(asset('css/welcome.css')) }}">
    </head>
    <body>
    <div class="header">
        <div class="header-menu">
            <div class="title">Witaj w eSchool!</div>
            <label for ="menu" class="sidebar-btn">
                <i class="fas fa-bars"></i>
            </label>
            <ul>
                {% for locale in locales  %}
                    {% if locale != app.request.locale %}
                        <li><a href="{{ path('change_locale', {'locale': locale}) }}"><img src="{{ absolute_url(asset('img/translator/'~locale~'.png')) }}" alt="{{ locale }}"></a></li>
                    {% endif %}{% endfor %}
            </ul>
        </div>
    </div>
    <div class="container">
        <div class="split left">
            <h1>{% trans %}Jestem uczniem{% endtrans %}</h1>
            <a href="/login" class="button">{% trans %}Logowanie{% endtrans %}</a>
        </div>
        <div class="split right">
            <h1>{% trans %}Jestem nauczycielem{% endtrans %}</h1>
            <a href="/teacher/login" class="button">{% trans %}Logowanie{% endtrans %}</a>
        </div>
    </div>
    <script src="{{ absolute_url(asset('js/welcome.js')) }}"></script>
    </body>
    </html>

{% endblock %}