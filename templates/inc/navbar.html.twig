<input type="checkbox" id="menu">

<div class="wrapper">
    <div class="header">
        <div class="header-menu">
            <div class="title">eSchool</div>
            <label for ="menu" class="sidebar-btn">
                <i class="fas fa-bars"></i>
            </label>
            <ul>
                {% if app.user %}
                    <li><a href="{{ path('app_logout') }}"><i class="fas fa-power-off"></i></a></li>
                {% endif %}
            </ul>
        </div>
    </div>
    <div class="side-menu">
        <center>
            <img src="{{ absolute_url(asset('img/profile2.jpeg')) }}" alt="">
            <br></br>
            <h2><b>{{ app.user.firstname }} {{ app.user.lastname }}</b></h2>
            <h4><b>{{ app.user.email }}</b></h4>
        </center>
        <br>
        <div class="item"><a href="{{ path('teacherHomepage')}}"><i class="fa fa-home"></i><span>Home</span></a></div>
        <div class="item">
            <a href="#" class="sub-btn"><i class="fa fa-comment"></i><span>Profile</span><i class="fas fa-angle-right dropdown"></i></a>
            <div class="sub-menu">
                <a href="{{ path('my_profile')}}" class="sub-item">My profile</a>
                <a href="{{ path('edit_profile')}}" class="sub-item">Edit profile</a>
            </div>
        </div>

        <div class="item">
            <a href="#" class="sub-btn"><i class="fas fa-graduation-cap"></i><span>Grades</span><i class="fas fa-angle-right dropdown"></i></a>
            <div class="sub-menu">
                <a href="{{ path('grades')}}" class="sub-item">Partial Grades</a>
                <a href="{{ path('finalgrades')}}" class="sub-item">Final Grades</a>
            </div>
        </div>

        <div class="item"><a href="{{ path('show_students')}}"><i class="fas fa-user-graduate"></i><span>Students</span></a></div>
        <div class="item">
            <a href="#" class="sub-btn"><i class="fa fa-comment"></i><span>Notices</span><i class="fas fa-angle-right dropdown"></i></a>
            <div class="sub-menu">
                <a href="{{ path('new_notice')}}" class="sub-item">Add Notice</a>
                <a href="{{ path('my_notice')}}" class="sub-item">My Notices</a>
                <a href="{{ path('all_notices')}}" class="sub-item">Show All</a>
            </div>
        </div>
        <div class="item">
            <a href="#" class="sub-btn"><i class="fa fa-comment"></i><span>Files</span><i class="fas fa-angle-right dropdown"></i></a>
            <div class="sub-menu">
                <a href="{{ path('add_file')}}" class="sub-item">Add File</a>
                <a href="{{ path('my_files') }}" class="sub-item">My Files</a>
            </div>
        </div>
        <div class="item"><a href="{{ path('reset_password')}}"><i class="fa fa-lock"></i><span>Password</span></a></div>

    </div>
</div>