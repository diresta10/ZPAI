{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ absolute_url(asset('css/mynotice.css')) }}">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <!-- Bootstrap core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.19.1/css/mdb.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    {{ include('inc/navbar.html.twig') }}

    <div class="wrapper">
        <!--main container start-->
        <div class="main-container">
            {% if articles %}
                <table id="articles" class="table table-striped">
                    <thead>
                    <tr>
                        <th>Notice Title</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for article in articles %}
                        <tr>
                            <td>{{ article.title }}</td>
                            <td>
                                <a href="/teacherHomepage/mynotice/{{ article.id }}" class="btn btn-dark">Show</a>
                                <a href="/teacherHomepage/mynotice/edit/{{ article.id }}" class="btn btn-light">Edit</a>
                                <a href="#" class="btn btn-danger delete-article" data-id="{{ article.id }}">Delete</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p>No notices to display</p>
            {% endif %}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.0/jquery.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function (){
            $('.sub-btn').click(function (){
                $(this).next('.sub-menu').slideToggle();
            });
        });
    </script>
    <script src="/js/main.js"></script>
{% endblock %}

