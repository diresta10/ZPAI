{% extends 'base.html.twig' %}

{% block stylesheets %}
    <!-- Bootstrap core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.19.1/css/mdb.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ absolute_url(asset('css/grade.css')) }}">
    <link rel="stylesheet" href="{{ absolute_url(asset('css/navbar.css')) }}">

{% endblock %}

{% block body %}
    {{ include('inc/navbar.html.twig') }}

    <div class="wrapper">
        <!--main container start-->
        <div class="main-container">
            <div class="row">
                <div class="form-card">
                    <div class="container">

                        <div class="table-title">
                            <div class="row">
                                <div class="col-sm-12">
                                    <h1>Add new category</h1>
                                </div>
                            </div>
                        </div>
                        <div class="form-container">
                            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                            {{ form_errors(form) }}

                            <div class="form-group">
                                {{ form_row(form.category_name, {'attr':{'class':'form-control'}}) }}
                                {{ form_errors(form) }}
                            </div>

                            {{ form_widget(form) }}
                            <button class="btn btn-success float-right">{{ button_label|default('Save') }}</button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="/js/app.js"></script>
    <script src="/js/jquery.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function (){
            $('.sub-btn').click(function (){
                $(this).next('.sub-menu').slideToggle();
            });
        });
    </script>


{% endblock %}

